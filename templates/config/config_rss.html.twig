{% extends 'config/config.html.twig' %}
{% block main %}
    <div class="row">
        <div class="col">
            <h3>Ajouter un flux</h3>
        </div>
    </div>
    <div class="row">

        {# Form Builder #}
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4">
            <div class="card">
                <div class="card-body">
                    {{ form(formConfig) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <h3>Modifier un flux</h3>
        </div>
    </div>
    <div class="row ">
        {% for feed in feeds %}
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4 mb-1">
            <div class="card">
                <div class="card-body">
                    <form class="form">
                        <label class="sr-only" for="inlineFormInputGroupName">Nom</label>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">Nom</div>
                            </div>
                            <input type="text" name="name" class="form-control" id="name-{{ feed.id }}" value="{{feed.name}}">
                        </div>

                        <label class="sr-only" for="inlineFormInputGroupUrl">URL</label>
                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text px-3">URL</div>
                            </div>
                            <input type="text" name="url" class="form-control" id="url-{{ feed.id }}" value="{{feed.rssUrl}}">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" btn-type="update" class="btn btn-outline-dark mb-2 mx-2" data-id="{{feed.id}}">Modifier</button>
                            <button type="submit" btn-type="delete" class="btn btn-outline-dark mb-2" data-id="{{feed.id}}">Supprimer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {% else %}
            Aucun flux RSS trouv√©.
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/javascript/script.js"></script>
{% endblock %}